<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@mipmap/bj"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/weixuntitle2"/>

    <TextView
        android:id="@+id/top_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微讯"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="28dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:textColor="#0e0e0e"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待续........."
        android:layout_marginTop="5dp"
        android:layout_marginLeft="28dp"
        android:layout_below="@+id/top_tv_title"
        android:layout_alignLeft="@+id/top_tv_title"
        android:layout_alignStart="@+id/top_tv_title"
        android:textColor="#454444"/>

</RelativeLayout>
