<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp">

    <ImageView

        android:id="@+id/iv_news_firstImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerInside"/>

    <TextView

        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_news_firstImg"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/title"
        android:textColor="#000000"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_news_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_news_title"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/iv_news_firstImg"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="内容"
        android:textColor="#999999"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_news_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="-1-"
        android:textColor="#000000"
        android:textSize="6sp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/iv_news_firstImg"/>
    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/weixuntitle2"
        android:layout_marginRight="3dp"
        android:textSize="14sp"
        android:textColor="#ff0000"
        android:layout_alignBottom="@+id/iv_news_firstImg"
        android:layout_toLeftOf="@+id/tv_news_type"
        />

    <TextView
    android:id="@+id/tv_news_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/source"
    android:layout_marginRight="3dp"
    android:textSize="14sp"
    android:textColor="#ff0000"
    android:layout_alignParentRight="true"
    android:layout_alignBottom="@+id/iv_news_firstImg"/>


</RelativeLayout>
